#include <iostream>
#include <math.h>
using namespace std;
int fact(int n) { 
   if ((n==0)||(n==1))
      return 1;
   else
      return n*fact(n-1);
}
int main() 

{
 float x = 10, sum = 1, term = 1, temp = 0;
 int i = 0;

 while (temp != sum) {
 i++;
 term = term * x / i;
 temp = sum;
 sum = sum + term;
 cout<< i<<' '<<term<<' '<<sum<<endl; 
 }

// Rn = (exp((double)x)* pow(10,i+1))/fact(i+1);
 cout<<exp((double)x);
 return 0;
}
