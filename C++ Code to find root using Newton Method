#include <iostream>
#include <string>
using namespace std;
int main()
{
    int n,i,j;
    float x[20],f[20],a,sum=0,fact;
    cout<<"Write no of functions ";
    cin>>n;
    cout<<"\n Value of x with corresponding f(x) ";
    for(i=0;i<n;i++)
    cin>>x[i]>>f[i];
    cout<<"\n Enter value of t for calculation ";
    cin>>a;

    for(j=0;j<n-1;j++)
    {
        for(i=n-1;i>j;i--)
            f[i]=(f[i]-f[i-1])/(x[i]-x[i-j-1]);
    }
    for(i=n-1;i>=0;i--)
    {
        fact=1;
        for(j=0;j<i;j++)
            fact*=(a-x[j]);
            
        fact*=f[j];
        sum+=fact;
    }
    cout<<"The value is "<<sum;
    return 0;
}
